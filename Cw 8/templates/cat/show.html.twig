{% extends 'base.html.twig' %}

{% block title %}Cat{% endblock %}

{% block body %}
    <h1>Cat</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ cat.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ cat.name }}</td>
        </tr>
        <tr>
            <th>Age</th>
            <td>{{ cat.age }}</td>
        </tr>
        <tr>
            <th>IsAdoptable</th>
            <td>{{ cat.isAdoptable ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="low-button">
        <a href="{{ path('app_cat_index') }}" class="btn btn-secondary btn-lg btn-block">back to list</a>
    </div>
    <div class="small-btn">
        <a href="{{ path('app_cat_edit', {'id': cat.id}) }}" class="btn btn-secondary btn-sm">edit</a>
    </div>
    <div class="small-btn">
        {{ include('cat/_delete_form.html.twig') }}
    </div>

{% endblock %}
